<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--
        HOME PAGE
    -->

    <!--
        bootstrap import
    -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" 
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Recipe Corner - Cooking Made Easy</title>

    <!---
      - google font
    -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500&family=DM+Serif+Display&display=swap" rel="stylesheet">
   
    <!--
        - material icon
    -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!--
        - custom css
    -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <!--
        Navigation bar
    -->
    <header class="header" data-header> 

        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <a href="/" class="logo">
                <img src="/img/logoLight.png" width="190" height="80" alt="RecipeCorner" class="logo">
            </a>
            <div class="navbar-nav ml-auto">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" 
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active mr-4" href="/home">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link mr-4" href="/recipes">Recipes</a>
                    <a class="nav-item nav-link mr-4" href="/following">Following</a>
                    <a class="nav-item nav-link mr-4" href="/savedRecipes">Saved Recipes</a>
                    <a class="nav-item nav-link mr-4" href="/profile"><img src="/img/profileicon.png" width="30" length="15" alt="profileicon"></a>
              </div>
            </div>
            </div>
          </nav>
    </header>

    <!--
        Hero
    -->
    <section class="hero d-flex flex-column justify-content-center" aria-label="banner">
        <div class="banner-card">
            <h1 class="display-large" style="margin-bottom: 20px; margin-left: 110px;">Your desired dish?</h1>
            <div class="search-wrapper" data-search-form style="margin-bottom: 20px;">
                
                <!--search bar linked to recipes page-->
                <form class="form-inline my-2 my-lg-0 " action="/api/recipe/searchRecipe" method="post">
                    <span class="material-symbols-outlined leading-icon" aria-hidden="true">local_dining</span>
                    <input class="form-control mr-sm-2" style="width: 40%; height: 50px; font-size: 20px;"
                    type="search" name="keywords" placeholder="Search recipes..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"> 
                        <span class="material-symbols-outlined" aria-hidden="true">search</span>
                    </button>
                </form>
            
            </div>
            <p class="label-medium" style="margin-left: 110px;">Search any recipe e.g: cake, burger, pizza...</p>
        </div>
    </section>

    <!--Display popular recipes-->
    <h4 style="margin-top: 55px; margin-left: 100px; padding-bottom: 10px;"> Popular Recipes</h4>

    <style>
        .flex-row {
          overflow-x: auto;
        }
    </style>
    <div class="container-fluid">
        <div class="row flex-row flex-nowrap overflow-auto" style="padding-left: 30px;">
            <% if ((Array.isArray(popular) && popular.length)) { %>
                <% popular.forEach(function(rec) { %>           
                    <div class="col-3">
                        <a href="/api/recipe/getRecipeById/<%= rec.recipe_id %>" style="color: black;">
                            <div class="card" style="width: 18rem;">
                                <% if(rec.recipe_picture_path) { %>
                                    <img src= "<%= rec.recipe_picture_path %>" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } else { %>
                                    <img src="/img/default-recipe-pic.jpg" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= rec.recipe_name %></h5>
                                    <p class="card-text"></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %> 
            <% } %>
        </div>
    </div>
      

    <!--Display Dessert recipes-->
    <h4 style="margin-top: 55px; margin-left: 100px; padding-bottom: 10px;"> Dessert Ideas</h4>

    <style>
        .flex-row {
          overflow-x: auto;
        }
    </style>
    <div class="container-fluid">
        <div class="row flex-row flex-nowrap overflow-auto" style="padding-left: 30px;">
            <% if ((Array.isArray(food) && food.length)) { %>
                <% food.forEach(function(rec) { %>           
                    <div class="col-3">
                        <a href="/api/recipe/getRecipeById/<%= rec.recipe_id %>" style="color: black;">
                            <div class="card" style="width: 18rem;">
                                <% if(rec.recipe_picture_path) { %>
                                    <img src= "<%= rec.recipe_picture_path %>" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } else { %>
                                    <img src="/img/default-recipe-pic.jpg" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= rec.recipe_name %></h5>
                                    <p class="card-text"></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %> 
            <% } %>
        </div>
    </div>

    <!--Display vegetarian recipes-->
    <h4 style="margin-top: 55px; margin-left: 100px; padding-bottom: 10px;"> Vegetarian</h4>

    <style>
        .flex-row {
          overflow-x: auto;
        }
    </style>
    <div class="container-fluid">
        <div class="row flex-row flex-nowrap overflow-auto" style="padding-left: 30px;">
            <% if ((Array.isArray(diet) && diet.length)) { %>
                <% diet.forEach(function(rec) { %>           
                    <div class="col-3">
                        <a href="/api/recipe/getRecipeById/<%= rec.recipe_id %>" style="color: black;">
                            <div class="card" style="width: 18rem;">
                                <% if(rec.recipe_picture_path) { %>
                                    <img src= "<%= rec.recipe_picture_path %>" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } else { %>
                                    <img src="/img/default-recipe-pic.jpg" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= rec.recipe_name %></h5>
                                    <p class="card-text"></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %> 
            <% } %>
        </div>
    </div>

   </body>
</html>