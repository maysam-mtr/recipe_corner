<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!--
        SAVES RECIPES PAGE
    -->



    <!--
        bootstrap import
    -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" 
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Saved Recipes</title>


    <!---
      - google font
    -->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500&family=DM+Serif+Display&display=swap" rel="stylesheet">
    <!--
        - material icon
    -->

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!--
        - custom css
    -->
    <link rel="stylesheet" href="/style.css">

</head>
<body>
    <!--
        Navigation bar
    -->
    <header class="header" data-header> 

        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <a href="/" class="logo">
                <img src="/img/logoLight.png" width="190" height="80" alt="RecipeCorner" class="logo">
            </a>
            <div class="navbar-nav ml-auto">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" 
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link mr-4" href="/home">Home</a>
                    <a class="nav-item nav-link mr-4" href="/recipes">Recipes</a>
                    <a class="nav-item nav-link mr-4" href="/following">Following</a>
                    <a class="nav-item nav-link active mr-4" href="/savedRecipes"><span class="sr-only">(current)</span>Saved Recipes</a>
                    <a class="nav-item nav-link mr-4" href="/profile">
                        <img src="/img/profileicon.png" width="30" length="15" alt="profileicon"></a>
              </div>
            </div>
            </div>
          </nav>
    </header>
    
    <!-- header -->
    <h1 class="headline-small" style="margin-top: 55px; margin-left: 100px;">
        <span class="material-symbols-outlined" style="padding-right: 20px; padding-bottom: 40px;">bookmark</span>Saves
    </h1>

    <!-- Saved recipes display-->
    <div class="container-fluid" style="padding-left: 100px;">
        <div class="row">
            <% if (Array.isArray(recipes) && recipes.length) { %>
                <% recipes.forEach(function(recipe) { %>
                    <div class="col-sm-3 mb-3"> <!-- Bootstrap column class for horizontal arrangement and margin-bottom class for space between rows -->
                        <a href="#recipepage" style="color: black;">
                            <div class="card" style="width: 18rem;">
                                <% if(recipe.recipe_picture_path) { %>
                                    <img src= "<%= recipe.recipe_picture_path %>" class="card-img-top" alt="recipe pic" style="width: 287px; height: 250px;">
                                  <% } else { %>
                                    <img src="/img/default-recipe-pic.jpg" class="card-img-top" alt="recipe pic Picture" style="width: 287px; height: 250px;">
                                  <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= recipe.recipe_name %></h5>
                                    <p class="card-text"></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %> 
            <% } else { %>
                <p>No saved recipes...</p>
            <% } %>
        </div>
    </div>
    
    
    

    
</body>
</html>